{
  "name": "english-learn-monorepo",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:functions\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:functions": "cd functions && npm run dev",
    "build": "npm run build:frontend && npm run build:functions",
    "build:frontend": "cd frontend && npm run build",
    "build:functions": "cd functions && npm run deploy",
    "install:all": "npm install && cd frontend && npm install && cd ../functions && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "frontend",
    "functions"
  ]
}
